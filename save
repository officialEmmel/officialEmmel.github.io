  <script>
        (function ($) {
  $(document).ready(function(){
    
	// hide .navbar first
	$(".navbar").hide();
	
	// fade in .navbar
	$(function () {
		$(window).scroll(function () {
            // set distance user needs to scroll before we fadeIn navbar
			if ($(this).scrollTop() > 100) {
				$('.navbar').fadeIn(1000);
			} else {
				$('.navbar').fadeOut();
			}
		});

	
	});

});
  }(jQuery));
    </script>


